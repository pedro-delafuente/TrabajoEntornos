    public static void main(String[] args) {
        // TODO code application logic here

        Pajaro piolin = new Pajaro(true, "CANARIO", 1,
                2, "PIOLIN", LocalDate.of(2020, Month.JANUARY, 12),
                false, 0.100, 5);

        Pajaro pajaro2 = new Pajaro(true, "CANARIO", 1,
